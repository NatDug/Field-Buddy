# Agriden Local Development Environment
# Copy this file to .env.local and update with your actual values

# App Configuration
EXPO_PUBLIC_APP_NAME=Agriden
EXPO_PUBLIC_APP_SCHEME=agriden
EXPO_PUBLIC_APP_SLUG=agriden

# Development Server
EXPO_PUBLIC_DEV_SERVER_URL=http://localhost:8081
EXPO_PUBLIC_WEB_URL=http://localhost:19006

# Backend API
EXPO_PUBLIC_API_URL=http://localhost:4000

# USDA API Configuration
EXPO_PUBLIC_USDA_API_KEY=628375F3-25E7-3C82-8C14-B9C8C1D39E7C
EXPO_PUBLIC_USDA_BASE_URL=https://quickstats.nass.usda.gov/api/api_GET

# OAuth Configuration (Replace with your actual OAuth client IDs)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
EXPO_PUBLIC_MICROSOFT_CLIENT_ID=your-microsoft-client-id

# OAuth Redirect URIs for localhost
EXPO_PUBLIC_GOOGLE_REDIRECT_URI=http://localhost:19006/auth/google
EXPO_PUBLIC_MICROSOFT_REDIRECT_URI=http://localhost:19006/auth/microsoft

# QuickBooks (Backend-managed OAuth)
QBO_CLIENT_ID=your-intuit-client-id
QBO_CLIENT_SECRET=your-intuit-client-secret
QBO_REDIRECT_URI=http://localhost:4000/qbo/callback
QBO_ENV=sandbox

# Database Configuration
EXPO_PUBLIC_DB_NAME=agriden_dev.db

# Development Flags
EXPO_PUBLIC_IS_DEV=true
EXPO_PUBLIC_ENABLE_LOGGING=true
